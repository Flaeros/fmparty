<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/indigo_blue</item>
        <item name="colorPrimaryDark">@color/indigo_blue_dark</item>
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="colorControlNormal">@color/indigo_blue_light</item>
        <item name="colorControlActivated">@color/indigo_blue</item>
        <item name="colorControlHighlight">@color/indigo_blue_dark</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/indigo_blue</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="MyButton" parent="style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/mybutton</item>
    </style>

</resources>
